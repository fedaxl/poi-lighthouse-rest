
<!--Partial with  form to delete a category -->
<div class="uk-section">
  <div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body">
    <h2>Add A New Category</h2>
    <form class="uk-form-stacked" action="/add-category" method="POST">
      <div class="uk-form-controls">
        <label>Category Name</label>
        <input class="uk-input" id="form-stacked-text" type="text" name="name" placeholder="Insert a New Category" required >
      </div>
      <button class="uk-button uk-button-default" value="Submit">Add Category</button>
    </form>
  </div>
</div>
{{> error }}

