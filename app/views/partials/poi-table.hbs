<!-- Partial table listing all points of interest and their
categories along with buttons to view, delete and update
Points of Interest
-->
<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body">
<table class="uk-table">
  <caption>
    POINTS OF INTEREST
  </caption>
    <thead>
    <tr>
        <th colspan="1"></th>
        <th colspan="3">Name</th>
        <th colspan="3">Category</th>
        <th colspan="1"></th>
        {{#if onlyusercanview}}
            <th colspan="1">Delete</th>
            <th colspan="1">Update</th>
        {{/if}}
    </tr>
    </thead>
    <tbody class="uk-text-left">
    {{#each poi}}
        <tr>
            <td colspan="1"><i class="uk-icon-link" uk-icon="fas fa-map-marker-alt"></i></td>
            <td colspan="3"><a href="/view-poi/{{_id}}">{{name}}</a></td>
            <td colspan="3">{{category.name}}</td>
            <td colspan="1">
                <a href="/view-poi/{{_id}}" class="ui icon button"><i class="uk-icon-link" uk-icon="fas fa-eye"></i></a>
            </td>
            {{#if ../onlyusercanview}}
                <td colspan="1">
                    <a href="/delete-poi/{{_id}}">
                      <i class="uk-icon-link" uk-icon="trash"></i>
                    </a>
                </td>
                <td colspan="1">
                    <a href="/update-poi/{{_id}}">
                    <i class="uk-icon-link" uk-icon="file-edit"></i>
                    </a>
                </td>
            {{/if}}
        </tr>
    {{/each}}
    </tbody>
</table>
</div>